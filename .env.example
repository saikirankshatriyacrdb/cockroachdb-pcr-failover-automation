# Copy this to .env and fill in your values

# CockroachDB Cloud API
COCKROACH_API_SECRET_KEY=your_api_secret_key_here

# Cluster IDs (from CockroachDB Cloud console)
PRIMARY_CLUSTER_ID=<YOUR_PRIMARY_CLUSTER_ID>
STANDBY_CLUSTER_ID=<YOUR_STANDBY_CLUSTER_ID>
PCR_STREAM_ID=<YOUR_PCR_STREAM_ID>  # Optional, will be auto-discovered if not provided

# Primary Cluster Connection (optional, for direct health checks and settings)
PRIMARY_CLUSTER_ENDPOINT=postgresql://<YOUR_USERNAME>:<YOUR_PASSWORD>@<YOUR_PRIMARY_SQL_DNS>:26257/defaultdb?sslmode=require

# Cluster SQL DNS (used by proxy layer)
PRIMARY_SQL_DNS=<YOUR_PRIMARY_SQL_DNS>
STANDBY_SQL_DNS=<YOUR_STANDBY_SQL_DNS>

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
FAILURE_THRESHOLD=3
FAILOVER_DELAY=60

# Failover Configuration
FAILOVER_TO_LATEST=true
# FAILOVER_AT_TIMESTAMP=2025-05-01T19:39:39.731939Z  # Optional, ISO format

# Database Credentials (for connection manager)
# DB_USERNAME=<YOUR_USERNAME>
# DB_PASSWORD=<YOUR_PASSWORD>

# Monitoring
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=8000
